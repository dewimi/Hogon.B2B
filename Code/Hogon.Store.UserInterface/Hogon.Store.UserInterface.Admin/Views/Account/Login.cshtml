@{
    ViewBag.Title = "管理员登陆";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section header{
    <div style=" height:89px;line-height:89px;background:#3085cb; width:100%;z-index:5;top:0;">
        <img src="~/Content/Images/logo_3.png" />
    </div>
}

<style>
    .systemModules {
        background: url(http://simg.instrument.com.cn/netshow/20130911/images/lobgl.gif) repeat-x;
        height: 470px;
    }

    .leftdiv {
        float: left;
        display: inline;
        width: 560px;
        margin-left: 70px;
    }

    .ad {
        margin-top: 16px;
    }

    .aaa {
        margin-top: 10px;
    }

    .L {
        float: left;
        line-height: 32px;
        font-size: 14px;
        margin-right: 30px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        width: 220px;
    }

    .a_3 {
        color: #666;
    }

    .a_3:hover {
        color: #f76060;
        text-decoration: none;
    }

    .rightdiv {
        width: 350px;
        float: left;
        display: inline;
        margin-top: 35px;
        margin-left: 100px;
        height: 435px;
    }

    .logindiv {
        height: 355px;
        width: 350px;
        background: #FFFFFF;
        border: 1px solid #d7d7d7;
        box-shadow: 0px 0px 5px 1px rgba(0,0,0,.1);
        background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #fff), color-stop(1, #f1f2f3));
    }

    .TC {
        margin-top: 15px;
        font-size:30px;
        font-weight:800;
        color:#050000
    }

    .divTitle {
        margin-top: 10px;
        margin-left: 20px;
        width: 100px;
        line-height: 70px;
        font-family: "Microsoft YaHei";
        font-size: 18px;
    }

    .hr_3 {
        line-height: 3px;
        clear: both;
        background: url(http://simg.instrument.com.cn/netshow/20130911/images/brbrown.gif) no-repeat;
        height: 3px;
        width: 350px;
    }

    .input-control {
        width: 250px;
        line-height: 40px;
        margin-left: 50px;
        margin-top: 15px;
    }

    .checkbox {
        margin-top: 20px;
        font-size: 14px;
        margin-left: 50px;
    }

    .btn-primary {
        margin-top: 10px;
        margin-left: 50px;
        width: 250px;
    }

    .a_1 {
        color: #0197e3;
        font-weight: bolder;
    }

    .a_2 {
        color: #2176bd;
        font-weight: bolder;
    }

    .hr_4 {
        background: #F1F3F5;
        height: 20px;
    }

    .footerdiv {
        height: 50px;
        color: #fff;
        background: #a6a6a6;
        text-align: center;
        line-height: 50px;
        display: block;
    }
</style>
<div class="systemModules">
    <div class="leftdiv">
        <div class="ad">
            <a><img src="http://bimg.instrument.com.cn/g/sh102193/sh102193_560_300_20170117.gif" /></a>
        </div>
        <div class="aaa">
            <ul>
                <li class="L"><a class="a_3" href="">【视频】领跑网络营销新时代</a> </li>
                <li class="L"><a class="a_3" href="">【视频】仪器先锋新品推广服务包推介会</a> </li>
                <li class="L"><a class="a_3" href="">【视频】展位维护提高宣传效果9大技巧</a></li>
                <li class="L"><a class="a_3" href="">【视频】网络营销SEO搜索引擎优化培训</a></li>
                <li class="L"><a class="a_3" href="">【视频】科学仪器行业E-marketing探讨与技术分享</a></li>
                <li class="L"><a class="a_3" href="">【视频】移动互联网的未来—科学仪器行业如何做好移动营销 </a></li>
            </ul>
        </div>
    </div>
    <div class="rightdiv">
        <div class="logindiv">
            @using (Html.BeginForm("Login", "Account"))
            {
                <div class="divTitle">
                    <span>账号登录</span>
                </div>
                <div class="hr_3"></div>
                <input id="UserName" type="text" name="UserName" class="form-control input-control" placeholder="请输入账号">
                <input id="Password" type="password" name="Password" class="form-control input-control" placeholder="请输入密码">
                <div class="checkbox">
                    <label>
                        <input type="checkbox">下次自动登录
                    </label>
                    &nbsp;&nbsp; &nbsp;
                    <a href="" class="a_1">免费注册</a>
                    <a href="" class="a_2">忘记密码?</a>
                </div>
                <button name="confirmButton" type="submit" class="btn btn-primary">登录</button>
            }
        </div>
        <div class="TC">
           <label>咨询电话：021-51001666</label>
        </div>
    </div>
</div>
<div class="hr_4">
</div>
<div style="text-align:center;background:#F1F3F5">
    <img src="http://simg.instrument.com.cn/netshow/20130911/images/loworld.jpg"/>
</div>
<div class="hr_4">
</div>

<div>
    <div class="footerdiv">
        www.hg17.com©1999-2016,All Rights Reserved版权所有，未经书面授权，页面内容不得以任何形式进行复制
    </div>
</div>